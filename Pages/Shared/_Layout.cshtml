<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ColorByNumber</title>
    <link rel="icon" href="ring.png" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <ul class="menu">
            <li class="menu-option">
                <a href="https://www.angryelfgames.com">Angry Elf Games Home</a>
            </li>
            <li class="menu-option">
                <a asp-area="" asp-page="/Index">Paint By Number</a>
            </li>
        </ul>
    </header>
    <div class="cbn-body">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted cbn-footer">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - Angry Elf Games 
            <br />
            Version: @GetType().Assembly.GetName().Version.ToString(3)
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
